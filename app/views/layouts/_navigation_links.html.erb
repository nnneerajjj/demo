<%# add navigation links to this file %>
<% if user_signed_in? %>
  <li><%= link_to 'Offers', offers_path %></li>
  <li><%= link_to 'Edit account', edit_user_registration_path %></li>
  <li><%= link_to 'Sign out', destroy_user_session_path, :method=>'delete' %></li>
  <li class="dropdown">
    <a class="dropdown-toggle nav-pic-dropdown" data-toggle="dropdown" href="#"><%= render 'layouts/user_pic', size: 50 %></a>
    <ul class="dropdown-menu">
      <li><%= link_to 'View profile', current_user %></li>
      <li><%= link_to 'Edit profile', edit_user_registration_path %></li>
      <li><%= link_to 'Administration', '/admin' %><a href="#">Page 1-3</a></li>
      <% if current_user.try(:admin?) %>
        <li><%= link_to 'Administration', '/admin' %></li>
        <li><%= link_to 'All Users', users_path %></li>
      <% end %>
    </ul>
  </li>
<% else %>
  <li><%= link_to '<span class="glyphicon glyphicon-user"></span> Sign Up'.html_safe, new_user_registration_path %></li>
  <li><%= link_to '<span class="glyphicon glyphicon-log-in"></span> Login'.html_safe, new_user_session_path %></li>
<% end %>

<div class="product_cont">
  <div class="product_img_cont">
    <%= link_to product do %>
      <%= image_tag(product.picture.url(:thumb)) %>
    <% end %>
  </div>
  <div class="category_name"><%= product.category.name %></div>
  <div class="product_name">
    <%= product.title %>
  </div>
  <div class="fifty">
    Price: 
    <% if discount_percent > 0 %>
      <%= (product.price - ((product.price/100) * discount_percent)).round 2 %> <span class="struck_off">  
    <% else %>
      <span>
    <% end %>
      <%= product.price %>
    </span>
  </div>
  <div class="fifty">
    <% if discount_percent > 0 %>
      Discount: <%= discount_percent %> %
    <% end %>&nbsp;
  </div>
  <div class="fifty">
    Stock: <%= product.stock %>
  </div>
  <div class="fifty">
    <% if policy(product).edit? %>
      <%= link_to 'Edit', edit_product_path(product) %>
    <% end %>
    <% if policy(product).destroy? %>
      | <%= link_to 'Destroy', product, data: { confirm: 'Are you sure?' }, method: :delete %>
    <% end %>
  </div>
</div>

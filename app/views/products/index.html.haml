.page-header
  - if policy(Product).new?
    = link_to new_product_path, class: 'btn btn-primary' do
      %span.glyphicon.glyphicon-plus
      New Product
  %h1 Listing products
  .products_cont
    - @products.each do |product|
      = render product, {product: product, discount_percent: product.discount_percent} 
.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Category
        %th User
        %th Title
        %th Description
        %th Stock
        %th Price
        %th Status
        %th
        %th
        %th

    %tbody
      - @products.each do |product|
        %tr
          %td= product.category.name
          %td= product.user.name
          %td= product.title
          %td= product.description
          %td= product.stock
          %td= product.price
          %td= product.status
          %td= link_to 'Show', product
          %td= link_to 'Edit', edit_product_path(product)
          %td= link_to 'Destroy', product, data: { confirm: 'Are you sure?' }, method: :delete
